# ============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================================================

# Modo de desarrollo
DEBUG=True

# Información de la aplicación
APP_NAME=Generador de Códigos QR
APP_VERSION=1.0.0

# ============================================================================
# CONFIGURACIÓN DE API BACKEND
# ============================================================================

# URL del backend (cambiar en producción)
API_BASE_URL=http://localhost:5000

# API Key (si el backend requiere autenticación)
API_KEY=

# Timeout para peticiones HTTP (segundos)
API_TIMEOUT=30

# ============================================================================
# RUTAS DE ALMACENAMIENTO
# ============================================================================

# Directorio de exportaciones
EXPORTS_DIR=./storage/exports

# Directorio de cache
CACHE_DIR=./storage/cache

# ============================================================================
# CONFIGURACIÓN DE QR
# ============================================================================

# Nivel de corrección de errores por defecto (L, M, Q, H)
DEFAULT_ERROR_CORRECTION=Q

# Escala de exportación por defecto
DEFAULT_EXPORT_SCALE=10

# DPI para exportación PNG
EXPORT_DPI=300

# ============================================================================
# CONFIGURACIÓN DE LOGGING
# ============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=./storage/app.log

# ============================================================================
# NOTAS
# ============================================================================

# Este es un archivo de EJEMPLO. Para usar estas variables:
# 1. Copia este archivo como .env
# 2. Ajusta los valores según tu entorno
# 3. El archivo .env NO se sube a GitHub (está en .gitignore)